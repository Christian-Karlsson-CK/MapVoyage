@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map</title>
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        var map = L.map('map').setView([58.31, 15.09], 13); // Center the map and set zoom level
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Example: Adding a marker
        var marker = L.marker([58.31, 15.09]).addTo(map)
            .bindPopup('A pretty CSS3 popup.<br> Easily customizable.')
            .openPopup();

        function onMapClick(e) {
            var lat = e.latlng.lat;
            var lng = e.latlng.lng;

            L.marker([lat, lng]).addTo(map)
                .bindPopup('You clicked the map at <br> Latitude: ' + lat + '<br> Longitude: ' + lng)
                .openPopup();
        }
        map.on('click', onMapClick);
    </script>



</body>
</html>
